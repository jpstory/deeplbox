{
  "manifest_version": 3,

  "name": "DeepLKey: DeepL Keyboard Shortcut",
  "version": "1.6.6",
  "description": "Open DeepL translator page and send selected text by keyboard shortcut or context menu.",
  "author": "Susumu OTA",
  "homepage_url": "https://github.com/susumuota/deeplkey",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [{
    "matches": ["https://www.deepl.com/*"],
    "js": ["deepl.js"]
  }],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "DeepLKey: DeepL Keyboard Shortcut",
    "default_popup": "popup.html"
  },

  "commands": {
    "deepl-open": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+B"
      },
      "description": "Open DeepL"
    }
  },

  "permissions": [
    "commands",
    "contextMenus",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
