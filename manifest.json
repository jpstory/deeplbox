{
  "manifest_version": 3,

  "name": "DeepLKey: DeepL Keyboard Shortcut",
  "version": "1.1.0",
  "description": "Open DeepL translator page and send selected text by keyboard shortcut or context menu.",
  "author": "Susumu OTA",
  "homepage_url": "https://github.com/susumuota/deeplkey",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {"matches": ["https://www.deepl.com/*"], "js": ["content.js"]}
  ],

  "commands": {
    "deepl-open": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Open DeepL"
    }
  },

  "permissions": [
    "tabs",
    "commands",
    "contextMenus",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
