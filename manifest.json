{
  "manifest_version": 3,

  "name": "DeepLKey: DeepL Keyboard Shortcut",
  "version": "1.0.2",
  "description": "Open DeepL page by keyboard shortcut and context menu",
  "author": "Susumu OTA",
  "homepage_url": "https://github.com/susumuota/",

  "background": {
    "service_worker": "background.js"
  },

  "commands": {
    "deepl-open": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Open DeepL"
    }
  },

  "permissions": [
    "tabs",
    "commands",
    "contextMenus",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
